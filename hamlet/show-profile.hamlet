<h2>Phone numbers
\^{profileTable (pdPhone profile)}
$maybe d <- dest
    <form method="post" action="@{d}" .hidden>
        <input type="hidden" name="type" value="phone">
        Phone type: #
        <select name="name">
            <option value="Home">Home
            <option value="Cell">Cell
            <option value="Work">Work
        \ #
        <input type="tel" name="value"> #
        <input type="submit" value="Add">
<h2>Addresses
\^{profileTable (pdAddress profile)}
$maybe d <- dest
    <form method="post" action="@{d}" .hidden>
        <input type="hidden" name="type" value="address">
        <table>
            <tr>
                <th>Location
                <td>
                    <select name="name">
                        <option value="Home">Home
                        <option value="Work">Work
            <tr>
                <th>Address
                <td>
                    <textarea name="value">
            <tr>
                <td colspan="2">
                    <input type="submit" value="Add">
<h2>Screen names
\^{profileTable (pdScreenName profile)}
$maybe d <- dest
    <form method="post" action="@{d}" .hidden>
        <input type="hidden" name="type" value="screen-name">
        Service: #
        <select name="name">
            <option value="AIM">AIM
            <option value="Yahoo!">Yahoo!
            <option value="Facebook">Facebook
        \ #
        <input type="text" name="value"> #
        <input type="submit" value="Add">
<h2>Miscellaneous
\^{profileTable (pdMisc profile)}
$maybe d <- dest
    <form method="post" action="@{d}" .hidden>
        <input type="hidden" name="type" value="misc">
        <table>
            <tr>
                <th>Name
                <td>
                    <input type="text" name="name">
            <tr>
                <th>Value
                <td>
                    <textarea name="value">
            <tr>
                <td colspan="2">
                    <input type="submit" value="Add">
